# Variables d'environnement pour SIOP Spring Boot Application
# Copiez ce fichier vers .env et modifiez les valeurs

# Configuration Oracle
ORACLE_USERNAME=siop_user
ORACLE_PASSWORD=siop_password

# Configuration SMTP
SMTP_HOST=smtp.rawbank.cd
SMTP_USERNAME=siop@rawbank.cd
SMTP_PASSWORD=siop_password

# Configuration de l'application
SPRING_PROFILES_ACTIVE=prod
JAVA_OPTS=-Xms512m -Xmx1024m

# Configuration du scheduler
SIOP_SCHEDULER_ENABLED=true
SIOP_SCHEDULER_CRON=0 */15 * * * *

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=/app/logs/siop-application.log
